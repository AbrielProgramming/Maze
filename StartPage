import java.awt.*;
import javax.swing.*;

import java.awt.event.*;
public class StartPage extends JFrame{
	JPanel panel;
	JLabel welcomeLabel;
	JLabel label1,label2,label3,label4, label5;
	JButton start;
	JButton quit;
	public StartPage(){
		panel=new JPanel();
		panel.setLayout(new BoxLayout(panel,BoxLayout.Y_AXIS));
		welcomeLabel=new JLabel("Welcome to \n Labyrinth!");
		int style=welcomeLabel.getFont().getStyle();
		String name=welcomeLabel.getFont().getName();
		welcomeLabel.setFont(new Font(name,Font.BOLD,20));
		welcomeLabel.setForeground(Color.red);
		label1=new JLabel("This is a game in which you have to navigate a maze, but the maze moves!");
		label2=new JLabel("Your player will be a blue circle. Navigate the maze using the arrow keys.");
		label3=new JLabel("Be wary of the moving plates, because if one moves on top of you, you will fail the game!");
		label4=new JLabel("Also steer clear of any orange monsters lurking about; they will kill you as well.");
		label5=new JLabel("Try and reach the green square to win.\nAre you read? Let's play!");
		
		label1.setFont(new Font(name,Font.BOLD,14));
		label1.setForeground(Color.red);
		label2.setFont(new Font(name,Font.BOLD,14));
		label2.setForeground(Color.red);
		label3.setFont(new Font(name,Font.BOLD,14));
		label3.setForeground(Color.red);
		label4.setFont(new Font(name,Font.BOLD,14));
		label4.setForeground(Color.red);
		label5.setFont(new Font(name,Font.BOLD,14));
		label5.setForeground(Color.red);
		
		panel.add(welcomeLabel);
		panel.add(label1);
		panel.add(label2);
		panel.add(label3);
		panel.add(label4);
		panel.add(label5);
		panel.setBackground(Color.yellow);
		
		start=new JButton("Start");
		start.addActionListener(new StartListener());
		quit=new JButton("Quit");
		quit.addActionListener(new QuitListener());
		
		panel.add(start);
		panel.add(quit);
		
		this.setDefaultCloseOperation(JFrame.DISPOSE_ON_CLOSE);
		this.setContentPane(panel);
		this.pack();
		this.setSize(300,300);
		this.setVisible(true);
		
	}
	class StartListener implements ActionListener{
		public void actionPerformed(ActionEvent e){
			dispose();
		}
	}
	class QuitListener implements ActionListener{
		public void actionPerformed(ActionEvent e){
			System.exit(0);
		}
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
