import java.awt.*;
import java.util.ArrayList;


public class Level1 extends Maze{
	private ArrayList<Plate> plates;
	private ArrayList<SlidingPlate> slidingPlates;
	private ArrayList<AllMonsters> monsters;
	public Level1(DisplayGame game){
		super(game);
	}
	public ArrayList<SlidingPlate> getSlidingPlates(){
		return slidingPlates;
	}
	public ArrayList<Plate> getPlates(){
		return plates;
	}
	public boolean dark(){
		return false;
	}
	public void setPlates(){
		
		plates=new ArrayList<Plate>();
		slidingPlates=new ArrayList<SlidingPlate>();
		monsters=new ArrayList<AllMonsters>();
		
		char[] monsterDirection={'d','u'};
		Monster newMonster=new Monster(super.getGrid(),super.getGrid().getGridSpace(3, 4),monsterDirection);
		super.getGrid().addMonster(newMonster);
		monsters.add(newMonster);
		//System.out.println(super.getPlayer().getName());
		
		
		Plate p1=new Plate(super.getGrid(),3,4,20,"vertical");
		plates.add(p1);
		Plate p2=new Plate(super.getGrid(),0,4,10,"vertical");
		plates.add(p2);
		Plate p3=new Plate(super.getGrid(),1,4,5,"horizontal");
		plates.add(p3);
		Plate p4=new Plate(super.getGrid(),0,1,20,"horizontal");
		plates.add(p4);
		Plate p5=new Plate(super.getGrid(),6,4,5,"vertical");
		plates.add(p5);
//		Plate p6=new Plate(super.getGrid(),20,29,20,"horizontal");
//		plates.add(p6);
//		Plate p7=new Plate(super.getGrid(),29,15,5,"horizontal");
//		plates.add(p7);
//		Plate p8=new Plate(super.getGrid(),10,10,4,"vertical");
//		plates.add(p8);
		
		SlidingPlate newPlate=new SlidingPlate(super.getGrid(),10,10,4,"horizontal",2,"vertical");
		plates.add(newPlate);
		slidingPlates.add(newPlate);
		
		
		for (Plate plate : plates){
			super.getGrid().addPlate(plate);
		}
		for (SlidingPlate splate : slidingPlates){
			super.getGrid().addPlate(splate);
		}
	}
	public boolean platesRandom(){
		return true;
	}
	public ArrayList<AllMonsters> getMonsters(){
		
		return monsters;
	}
	public int gridWidth(){
		return 30;
	}
	public int gridHeight(){
		return 30;
	}
	public String getLevel(){
		return "Level 1";
	}
	public void addPlayer(Player toAdd){
		toAdd.changeOccupiedSpot(super.getGrid().getGridSpace(0,0));
	}
	public GridSpace playerStart(){
		return super.getGrid().getGridSpace(0,0);
	}
	public GridSpace gameCompleteSpace(){
		return super.getGrid().getGridSpace(29, 29);
	}


}

